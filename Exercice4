#include <iostream>
using namespace std;
class MyClass{
public:
    string nickname;
    MyClass();
    ~MyClass();
};
MyClass::MyClass(){
    cout<< "entrez votre nickname:"<<endl;
    cin >> nickname;
    cout<< "hello : "<< nickname <<endl;
}
MyClass::~MyClass(){
    cout<< "good bye : "<< nickname <<endl;
}
int main(){
    MyClass c1;
    return 0;
}
